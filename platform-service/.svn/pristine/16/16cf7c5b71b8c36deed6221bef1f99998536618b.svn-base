/* system style */
body,html,*{font-family: "Microsoft YaHei",Arial;}
body{color:#fff; font-size:14px; background-color:#000;}

ul{padding-left:0;}
li{list-style-type: none;padding-left:0;}
a{color:#fff !important;font-family: "Microsoft YaHei",Arial;text-decoration: none;}
a:hover{text-decoration: none;}
h1,h2,h3,h4,h5,h6,
.h1,.h2,.h3,.h4,.h5,.h6{color:#fff;font-family: "Microsoft YaHei",Arial;}
h1{font-size:21px;}
h2{font-size:21px;}
h3{font-size:18px;}
h4{font-size:16px;}
h5{font-size:16px;}
h6{font-size:14px;}
p{color:#fff !important;font-family: "Microsoft YaHei",Arial;}
p a{color:#fff !important;text-decoration:none;}

header{height: 104px;background-color:#021324;}
.header-logo{float: left;margin-top: -10px;}
.header-logo img{height: 70px;margin-top: 25px;}
.header-content{position: relative;width: 940px;height:104px;margin: 0 auto;background:#021324 url(../images/header_bg.png) top left no-repeat;}
.nav-small{color:#021324;height:30px;font-size:14px;line-height: 30px;margin-bottom:10px;}
.nav-small a {color:#021324 !important;}
.navbar-vrcontent{border:0;font-size:30px;}
.navbar-nav {margin: 20px 0;}
.nav li a:hover,
.nav .dropdown a:hover,
.dropdown-menu a:hover{color:#d3d3d3;background-color: #021324;}
.global-actions {position: absolute;right: 0px;top: 26px;height: 21px;line-height: 21px;color: #b8b6b4;font-size: 11px;z-index: 401;}

main,.footer_content{width:940px;margin:20px auto;}
.row{padding:15px;margin:0;}
.left_space{margin-left:10px;}
.right_space{margin-right:10px;}
.top_space{margin-top:20px;}
.top_space_10{margin-top:10px;}
.bottom_space{margin-bottom:20px;}
.padding{padding: 20px;}

/*轮播图*/
.main_cluster_content{width: 940px;margin: 50px auto; overflow: hidden;}
.carousel{height: 400px;}

/* main body */
.new_games_list,.all_games_list,.col_game_list,.played_game_list{background-color:rgba(255, 255, 255, 0.1);border-radius:5px;}
.inshadow{
    background-color: #000;
    border: 2px #000 solid;
    border-radius: 0px;
    box-shadow:none;
}
.new_game_list h1,
.allgame_list h1,
.row h1,
.about_item_header h2,
.store_message h1,
.offer_message h1,
.forget_password_box h1,
.loginbox h2,
.register_box h1
{color:#ffe400;}


.inshadow .caption{line-height:30px;}
.inshadow .caption h3,.inshadow .caption h2,.inshadow .caption h4{line-height:30px;font-size:18px;margin:0;}
.inshadow .caption {line-height:30px;font-size:14px;}
.inshadow:hover  {
    background-color: rgba(35,128,163,0.8);
    border: 2px #2380a3 solid;
    box-shadow:inset 0 0 10px rgba( 4,195,250,1);
}
.new_game_list img,.col_game_list img,.played_game_list img{width: 271px; height: 130px !important;}
.allgame_list img{width: 193px; height: 130px !important;}

/* 翻页控件 */
.pager li>a, .pager li>span {
    border-radius: 5px;
}

/* big hot button */
.game_player .row{font-size:18px;line-height:50px;height:50px;overflow: hidden;border:1px #000 solid;background:linear-gradient(to top,#000,#333);padding: 0 20px; margin: 10px 0;}


/* 详情 */
#game_name{font-size:30px;line-height:50px;border-bottom:3px #fae219 solid;}
.game_message{line-height:30px;}
.game_message b{font-weight:bold;color: #999;}

.game_dest_item h1{line-height:30px;}
.game_dest_item h1 span{line-height:30px;border-bottom:3px #fae219 solid;}

.game_operate a{padding:5px 20px;color:#fae219 !important;background:linear-gradient(to top,#000,#333);}
.game_operate a:hover{background:linear-gradient(to top,#333,#000);}

/* 玩家 */
.userinfo{margin:50px;background-color: rgba(255, 255, 255, 0.1);border-radius:5px; box-shadow: 5px 5px 25px rgba(255,255,255,0.3);}
.userinfo img{margin:20px;width: 100px;}
.goto_edit{margin: 20px auto;}
.value_box{ height: 80px; border: 1px #2380a3 solid;}
.page_form{margin: 80px;background-color: rgba(255,255,255,0.1);border-radius:5px; box-shadow: 5px 5px 25px rgba(255,255,255,0.3);}

/* 新闻 */
.new_title{}
.new_author{color: #61686d; padding-left: 0;}
.new_date{color: #61686d;}
.new_content{color:#acb2b8;}
.block_content_inner{text-align: center;border: 0.5px rgba(255,228,0,0.2) solid;}
.linkbar{padding:20px 0;border-bottom: 1px #ffe400 solid;}
.linkbar.active{border-bottom: 3px #ffe400 solid;}
.linkbar.active a{color: #ffe400 !important;}
.linkbar a{color: #c0f7f8 !important;}

/* 关于我们 */
.about_boxes_box_ctn,.about_item_ad{margin:20px auto;float: left; background-color: rgba(255,255,255,0.1);height: 250px;border-radius: 5px;border: 2px rgba(47, 47, 47, 0.5) solid;}
   
/* 登录 注册 忘记密码 */    
.loginbox,.register_box,.forget_password_box{background-color: rgba(255,255,255,0.1);border-radius:5px; box-shadow: 5px 5px 25px rgba(255,255,255,0.3);}
.ssa_box{border: 1px rgba(255,255,255,0.2) solid; padding: 20px;}

/* footer */
footer .logo{height:50px;}
.footer_content , .footer_content p, .footer_content a{color:#888888 !important; font-size:12px;}
.footer_nav a{padding:5px;color:#1193c5 !important;background:linear-gradient(to top,#000,#333);}
.footer_nav a:hover{background:linear-gradient(to top,#333,#000);}

/*按钮*/
.basic_btn a{padding:5px 20px;color:#fae219 !important;background:linear-gradient(to top,#000,#333);}
.basic_btn a:hover{background:linear-gradient(to top,#333,#000);}